# Single-Agent Car Creation System Configuration

# OLLAMA Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
LLM_TEMPERATURE=0.1

# Prompt Configuration
USE_JSON_PROMPTS=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_FILE_PATH=logs/car_agent.log
LOG_FORMAT=standard
ENABLE_COLORS=true
JSON_LOGS=false  # Default to text format logs
MAX_LOG_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# CLI Default Options
DEFAULT_VEHICLE_TYPE=sedan
DEFAULT_PERFORMANCE_LEVEL=standard
DEFAULT_FUEL_PREFERENCE=gasoline
DEFAULT_BUDGET=medium

# Development Settings
ENABLE_DEBUG_PRINTS=false
ENABLE_AGENT_LOGGING=true
ENABLE_TOOL_LOGGING=true

# File Output Settings
DEFAULT_OUTPUT_FORMAT=summary
AUTO_SAVE_RESULTS=false
OUTPUT_DIRECTORY=./output